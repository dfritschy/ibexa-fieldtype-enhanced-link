{
    "name": "netgen/ibexa-fieldtype-enhanced-link",
    "description": "Netgen's enhanced link field type for Ibexa",
    "type": "ezplatform-bundle",
    "authors": [
        {
            "name": "Netgen",
            "homepage": "https://netgen.io"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-dom": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "symfony/symfony": "*",
        "ezsystems/ezplatform-admin-ui": "~1.5.19",
        "ezsystems/repository-forms": "*",
        "ezsystems/ezpublish-kernel": "~7.5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "GPL-2.0-only",
    "autoload": {
        "psr-4": {
            "Netgen\\IbexaFieldTypeEnhancedLink\\": "lib/",
            "Netgen\\IbexaFieldTypeEnhancedLinkBundle\\": "bundle/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Netgen\\IbexaFieldTypeEnhancedLink\\Tests\\Integration\\": "tests/integration",
            "Netgen\\IbexaFieldTypeEnhancedLink\\Tests\\Unit\\": "tests/lib"
        }
    },
    "extra": {
        "ezpublish-legacy-dir": "ezpublish_legacy",
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit --colors=always"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": false
        }
    }
}
